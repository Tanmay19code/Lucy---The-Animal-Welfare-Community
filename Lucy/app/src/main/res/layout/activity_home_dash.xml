<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003D63"
    tools:context=".HomeDashActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/button"
                android:orientation="horizontal"
                android:padding="10dp">

                <!--            <ImageView-->
                <!--                android:id="@+id/imageView"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_weight="1"-->
                <!--                app:srcCompat="@drawable/user_logo_transperant" />-->

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profilePicture"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:elevation="10dp"
                    android:isScrollContainer="false"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@+id/username"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.711"
                    app:shapeAppearanceOverlay="@style/circular"
                    app:srcCompat="@drawable/user_logo_2"
                    app:strokeColor="#FF0000"
                    app:strokeWidth="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/usernameTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/berkshire_swash"
                        android:hint="Username"
                        android:textColor="#FFD600"
                        android:textColorHint="#FF5353"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/UserMailTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:hint="user_email"
                        android:textColor="#FFD600"
                        android:textColorHint="#FF5353"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:padding="20dp"
                app:cardBackgroundColor="#002E4A"
                app:cardElevation="10dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="180dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                app:cardBackgroundColor="#003D63">

                                <ImageView
                                    android:id="@+id/adoptionBTN"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="10dp"
                                    app:srcCompat="@drawable/pets" />

                                <TextView
                                    android:id="@+id/adoptionTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:fontFamily="@font/merienda_one"
                                    android:text="Adoption"
                                    android:textColor="#FFFFFF"
                                    android:textSize="24sp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="180dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                app:cardBackgroundColor="#003D63">

                                <ImageView
                                    android:id="@+id/animalActBTN"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="10dp"
                                    app:srcCompat="@drawable/animal_act"
                                    app:tint="#63FF00" />

                                <TextView
                                    android:id="@+id/animalActTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:fontFamily="@font/merienda_one"
                                    android:text="Animal Act"
                                    android:textColor="#FFFFFF"
                                    android:textSize="24sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="180dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                app:cardBackgroundColor="#003D63">

                                <ImageView
                                    android:id="@+id/assistanceBTN"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center_horizontal|top"
                                    android:padding="10dp"
                                    app:srcCompat="@drawable/emergency" />

                                <TextView
                                    android:id="@+id/assistanceTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:fontFamily="@font/merienda_one"
                                    android:text="Assistance"
                                    android:textColor="#FFFFFF"
                                    android:textSize="24sp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="180dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                app:cardBackgroundColor="#003D63">

                                <ImageView
                                    android:id="@+id/helpBTN"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="10dp"
                                    app:srcCompat="@drawable/help" />

                                <TextView
                                    android:id="@+id/helpTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:fontFamily="@font/merienda_one"
                                    android:text="Help"
                                    android:textColor="#FFFFFF"
                                    android:textSize="24sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="140dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:padding="20dp"
                                app:cardBackgroundColor="#002E4A"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/logoutBTN"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="10dp"
                                    app:srcCompat="@drawable/logout" />

                                <TextView
                                    android:id="@+id/logoutTXT"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:fontFamily="@font/merienda_one"
                                    android:text="LOGOUT !"
                                    android:textColor="#FFFFFF"
                                    android:textSize="24sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>