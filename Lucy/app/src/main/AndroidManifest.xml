<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tanmay.lucy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/lucy_white_logo_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/lucy_white_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar">
        

        <activity android:name=".AnimalActActivity" />
        <activity android:name=".HelpActivity" />
        <activity android:name=".EmergencyActivity" />
        <activity android:name=".AdoptionActivity" />
        <activity android:name=".HomeDashActivity" />
        <activity android:name=".ForgotPassword" />
        <activity
            android:name=".DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/Theme.Lucy.NoActionBar" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>